<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dp" />
            <stroke android:width="1dip" android:color="#FA006F" />
            <gradient android:angle="-90" android:startColor="#D50000" android:endColor="#C9075C" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dp" />
            <stroke android:width="1dip" android:color="#6200EA" />
            <solid android:color="#AA00FF"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dp" />
            <stroke android:width="1dip" android:color="#FF0303" />
            <gradient android:angle="-90" android:startColor="#99F5F5F5" android:endColor="@android:color/white" />
        </shape>
    </item>

</selector>